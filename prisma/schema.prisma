generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Feedback {
    id        Int      @id @default(autoincrement())
    name      String
    email     String
    company   String?
    features  String[]
    comments  String?  @db.Text
    createdAt DateTime @default(now())
}
